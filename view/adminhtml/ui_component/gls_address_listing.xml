<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">gls_address_listing.gls_address_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/edit"/>
                <class>primary</class>
                <label translate="true">Add New Address</label>
            </button>
        </buttons>
        <spinner>gls_address_columns</spinner>
        <deps>
            <dep>gls_address_listing.gls_address_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="gls_address_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">entity_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>GLSCroatia_Shipping::shipping_address</aclResource>
        <dataProvider class="GLSCroatia\Shipping\Ui\DataProvider\Listing\AddressDataProvider" name="gls_address_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <paging name="listing_paging"/>
        <filters name="listing_filters"/>
    </listingToolbar>
    <columns name="gls_address_columns">
        <selectionsColumn name="ids" sortOrder="0">
            <settings>
                <indexField>entity_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <column name="entity_id" sortOrder="10">
            <settings>
                <label translate="true">ID</label>
                <filter>textRange</filter>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="street" sortOrder="20">
            <settings>
                <label translate="true">Street Address</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="street_line2" sortOrder="30">
            <settings>
                <label translate="true">Street Address Line 2</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="postcode" sortOrder="40">
            <settings>
                <label translate="true">Zip/Postal Code</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="city" sortOrder="50">
            <settings>
                <label translate="true">City</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="country_code" component="Magento_Ui/js/grid/columns/select" sortOrder="60">
            <settings>
                <label translate="true">Country</label>
                <dataType>select</dataType>
                <filter>select</filter>
                <options class="GLSCroatia\Shipping\Model\Config\Source\Country"/>
            </settings>
        </column>
        <column name="region_id" component="Magento_Ui/js/grid/columns/select" sortOrder="61">
            <settings>
                <label translate="true">Region</label>
                <dataType>select</dataType>
                <filter>select</filter>
                <options class="GLSCroatia\Shipping\Model\Config\Source\Region"/>
            </settings>
        </column>
        <column name="label" sortOrder="70">
            <settings>
                <label translate="true">Label</label>
                <filter>text</filter>
            </settings>
        </column>
        <actionsColumn name="actions" sortOrder="200" class="GLSCroatia\Shipping\Ui\Component\Listing\Columns\AddressActions">
            <settings>
                <indexField>entity_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
    </columns>
</listing>
