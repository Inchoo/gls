<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">gls_pickup_view.gls_pickup_view_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">GLS Pickup View</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <label translate="true">Back</label>
                <url path="*/*/grid"/>
                <class>back</class>
            </button>
        </buttons>
        <dataScope>data</dataScope>
        <deps>
            <dep>gls_pickup_view.gls_pickup_view_data_source</dep>
        </deps>
    </settings>
    <dataSource name="gls_pickup_view_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <dataProvider class="GLSCroatia\Shipping\Ui\DataProvider\Form\PickupDataProvider" name="gls_pickup_view_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label/>
        </settings>
        <field name="account" formElement="input" sortOrder="10">
            <settings>
                <label translate="true">Account</label>
                <disabled>true</disabled>
            </settings>
        </field>
        <field name="count" formElement="input" sortOrder="20">
            <settings>
                <label translate="true">Package Count</label>
                <disabled>true</disabled>
            </settings>
        </field>
        <field name="time_from" formElement="input" sortOrder="30">
            <settings>
                <label translate="true">Pickup Time From</label>
                <disabled>true</disabled>
            </settings>
        </field>
        <field name="time_to" formElement="input" sortOrder="31">
            <settings>
                <label translate="true">Pickup Time To</label>
                <disabled>true</disabled>
            </settings>
        </field>
        <field name="address" formElement="textarea" sortOrder="40">
            <settings>
                <label translate="true">Address</label>
                <disabled>true</disabled>
            </settings>
        </field>
    </fieldset>
</form>
