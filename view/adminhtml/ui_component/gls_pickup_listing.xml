<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">gls_pickup_listing.gls_pickup_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/create"/>
                <class>primary</class>
                <label translate="true">Request New Pickup</label>
            </button>
        </buttons>
        <spinner>gls_pickup_columns</spinner>
        <deps>
            <dep>gls_pickup_listing.gls_pickup_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="gls_pickup_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">entity_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>GLSCroatia_Shipping::shipping_pickup_request</aclResource>
        <dataProvider class="GLSCroatia\Shipping\Ui\DataProvider\Listing\PickupDataProvider" name="gls_pickup_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <paging name="listing_paging"/>
        <filters name="listing_filters"/>
    </listingToolbar>
    <columns name="gls_pickup_columns">
        <selectionsColumn name="ids" sortOrder="0">
            <settings>
                <indexField>entity_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <column name="entity_id" sortOrder="10">
            <settings>
                <label translate="true">ID</label>
                <filter>textRange</filter>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="account" sortOrder="20">
            <settings>
                <label translate="true">Account</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="count" sortOrder="30">
            <settings>
                <label translate="true">Count</label>
                <filter>text</filter>
            </settings>
        </column>
        <column name="time_from" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date" sortOrder="40">
            <settings>
                <label translate="true">Pickup Time From</label>
                <dataType>date</dataType>
                <filter>dateRange</filter>
            </settings>
        </column>
        <column name="time_to" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date" sortOrder="41">
            <settings>
                <label translate="true">Pickup Time To</label>
                <dataType>date</dataType>
                <filter>dateRange</filter>
            </settings>
        </column>
        <actionsColumn name="actions" sortOrder="200" class="GLSCroatia\Shipping\Ui\Component\Listing\Columns\PickupActions">
            <settings>
                <indexField>entity_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
    </columns>
</listing>
